{% extends 'base.html.twig' %}
{% block title %}Mis posts
{% endblock %}
{% block body %}
	{{ parent() }}
	<div class="container v-container h-100 ">
		<div class="row h-100 justify-content-center align-items-center ">
			<div class="col-10 bg-white rounded my-3 p-5">
				{% for post in posts %}
					<div class="bg-white rounded p-3 my-3" onclick="window.location.href='{{ path('verPost',{id:post.id}) }}'" style="cursor: pointer">
						<h3>{{ post.titulo }}</h3>
						<div class="my-3 bg-yellow">
							<i class="fa fa-user"></i>
							<strong>
								Creado por
								{{post.user.nombre}}</strong>
						</div>
						<div class=" bg-green">
							<i class="far fa-clock"></i>
							<strong>Fecha de publicaci√≥n:
								{{ post.fechapublicacion | date }}</strong>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
